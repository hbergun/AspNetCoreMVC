@model Smile.Northwind.MvcWebUI.Models.ProductViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-responsive">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Unit Price</th>
            <th>Product Units In Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.UnitsInStock</td>
                <td><a class="btn btn-xs btn-outline-info" asp-controller="Cart" asp-action="AddToCart" asp-route-ProductID="@item.ProductID">Add To Cart</a></td>
            </tr>
        }
    </tbody>
</table>
<product-list-pager 
    current-category="@Model.CurrentCategoryID" 
    current-page="@Model.CurrentPage" 
    page-count="@Model.PageCount" 
    page-size="@Model.PageSize"></product-list-pager>


